@{
    ViewData["Title"] = "Thêm mới bác sĩ";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

@model DoctorModel

<div>
    <!-- BREADCRUMB -->
    <div class="page-meta">
        <nav class="breadcrumb-style-one" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Người dùng</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="@Url.Action("Index", "Doctor")">Quản lý bác sĩ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thêm mới bác sĩ</li>
            </ol>
        </nav>
    </div>
    <!-- /BREADCRUMB -->

    <div class="layout-top-spacing col-12">
        <a href="@Url.Action("Index", "Doctor")" class="btn">
            Trở lại
        </a>
    </div>

    <div class="row layout-top-spacing">
        <div id="user-management" class="col-lg-12 layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Thêm mới</h4>
                        </div>
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <div class="col-12">
                        <form asp-action="Create" method="POST" id="general-settings">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="FullName">Tên bác sĩ <strong class="text-danger">*</strong></label>
                                        <input asp-for="FullName"
                                               type="text"
                                               id="FullName"
                                               class="form-control @(ViewData.ModelState["fullName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Tên người dùng">
                                        <span asp-validation-for="FullName" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="UserName">Username <strong class="text-danger">*</strong></label>
                                        <input asp-for="UserName"
                                               type="text"
                                               id="UserName"
                                               class="form-control @(ViewData.ModelState["userName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Username">
                                        <span asp-validation-for="UserName" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="UserName">Username <strong class="text-danger">*</strong></label>
                                        <input asp-for="UserName"
                                               type="text"
                                               id="UserName"
                                               class="form-control @(ViewData.ModelState["userName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Username">
                                        <span asp-validation-for="UserName" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="Password">Mật khẩu <strong class="text-danger">*</strong></label>
                                        <input asp-for="Password"
                                               type="password"
                                               id="Password"
                                               class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Mật khẩu">
                                        <span asp-validation-for="Password" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="position">Vị trí <strong class="text-danger">*</strong></label>
                                        <input asp-for="Position"
                                               type="text"
                                               id="position"
                                               class="form-control @(ViewData.ModelState["Position"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Vị trí công việc">
                                        <span asp-validation-for="Position" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="certficate">Chứng chỉ <strong class="text-danger">*</strong></label>
                                        <input asp-for="Certificate"
                                               type="text"
                                               id="certificate"
                                               class="form-control @(ViewData.ModelState["Certificate"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Chứng chỉ công việc">
                                        <span asp-validation-for="Certificate" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="phone">Số điện thoại <strong class="text-danger">*</strong></label>
                                        <input asp-for="Phone"
                                               type="text"
                                               id="phone"
                                               class="form-control @(ViewData.ModelState["Phone"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Số điện thoại">
                                        <span asp-validation-for="Phone" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="RoleId">Vai trò <strong class="text-danger">*</strong></label>
                                        <select asp-for="RoleId" class="form-control @(ViewData.ModelState["RoleId"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                            <option value="">Chọn vai trò</option>
                                            <option value="1">Khách hàng</option>
                                            <option value="2">Bác sĩ</option>
                                        </select>
                                        <span asp-validation-for="RoleId" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                            </div>

                            
                            <button type="submit" class="btn btn-primary">Hoàn tất</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
